<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|top"
        android:orientation="vertical"
        android:baselineAligned="false">
       
       <TextView
               style="@style/TextAppearance.Preference.Caption"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:text="@string/preference_title_alarm"/>
       
       <LinearLayout
               style="@style/PreferenceButtonStyle"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="start|center_vertical"
               android:orientation="vertical">

              <TextView
                      style="@style/TextAppearance.Preference.Title"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      tools:text="@string/preference_title_security_code"/>
       
              <TextView
                      style="@style/TextAppearance.Preference.Description"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      tools:text="@string/preference_summary_security_code"/>

       </LinearLayout>
       
       <android.support.v4.widget.Space
               android:layout_width="match_parent"
               android:layout_height="12dp"/>

       <TextView
               style="@style/TextAppearance.Preference.Caption"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:text="@string/preference_title_mqtt_server"/>

       <LinearLayout
               style="@style/PreferenceButtonStyle"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="start|center_vertical"
               android:orientation="vertical">

              <TextView
                      style="@style/TextAppearance.Preference.Title"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      tools:text="@string/preference_title_broker"/>

              <TextView
                      style="@style/TextAppearance.Preference.Description"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      tools:text="@string/preference_summary_broker"/>

       </LinearLayout>
        
</LinearLayout>