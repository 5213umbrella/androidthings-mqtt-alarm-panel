<FrameLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    
    <com.thanksmister.androidthings.iot.alarmpanel.ui.views.CountDownView
            android:id="@+id/countDownView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
            
                <com.todddavies.components.progressbar.ProgressWheel
                        android:id="@+id/countDownProgressWheel"
                        android:layout_width="246dp"
                        android:layout_height="246dp"
                        ProgressWheel:textColor="@color/text"
                        android:tag="Thin"
                        ProgressWheel:textSize="@dimen/text_size_key_pad"
                        ProgressWheel:rimColor="@color/gray_color"
                        ProgressWheel:barColor="@color/blue"
                        ProgressWheel:barWidth="6dp"
                        ProgressWheel:rimWidth="1dp"
                        android:gravity="center"
                        android:layout_gravity="center" />
            
               <android.support.v4.widget.Space
                       android:layout_width="match_parent"
                       android:layout_height="8dp"/>
            
                <Button
                        style="@style/ButtonRed.Small"
                        android:id="@id/buttonCancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@android:string/cancel"/>
            
        </LinearLayout>

    </com.thanksmister.androidthings.iot.alarmpanel.ui.views.CountDownView>

</FrameLayout>